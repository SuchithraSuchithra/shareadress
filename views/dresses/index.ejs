<p class="page-header">Previous Posts</p>

<div class="cards">
  <%for (let dress of dresses) {%>

  <div class="ui-card">
    <footer class="content">
      <span><a href="<%= dress.website_url %>"><p class="card-title"><%= dress.title %></p></a></span>
      <span><p class="card-title"><%= dress.price %>$</p></span>
    </footer>
    <img src="<%= dress.photo_url%>" alt="" />
    <footer class="content">
      <span>
        <form action="/dresses/<%= dress.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <button class="delete-button">Delete</button>
        </form>
      </span>
      <span> 
        <form action="/dresses/<%= dress.id %>/edit">
          <button class="update-button">Update</button>
        </form>
    </footer>
  </div>
  <%}%>
</div>
